<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KOTORModSync.Dialogs.DependencyUnlinkDialog"
        Title="ðŸ”— Dependency Unlink Required"
        Width="900" Height="600"
        MinWidth="700" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBackgroundBrush}"
        Foreground="{DynamicResource ThemeForegroundBrush}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="BorderOnly">

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Custom Window Controls -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal" Spacing="0" Margin="0,8,8,0">
            <Button Content="X" Click="CloseButton_Click"
                    HorizontalContentAlignment="Center" VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" Width="40" Height="40" FontSize="15" />
        </StackPanel>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeControlHighlightLowBrush}"
                BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                Padding="20">
            <StackPanel Spacing="10">
                <TextBlock Text="ðŸ”— DEPENDENCY UNLINK REQUIRED" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="{Binding SummaryText}" TextWrapping="Wrap" Opacity="0.9"/>
            <TextBlock Text="ðŸ’¡ Uncheck components below to remove their dependency on the component you want to delete, then click 'Unlink &amp; Delete' to continue."
                       TextWrapping="Wrap" FontStyle="Italic" Opacity="0.7"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,*" Margin="20">
            <!-- Dependent Components List -->
            <Border Grid.Column="0" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                    Background="{DynamicResource ThemeBackgroundBrush}" Margin="0,0,10,0">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="ðŸ“‹ Dependent Components" FontWeight="SemiBold"
                               Padding="15,10" FontSize="14"
                               Background="{DynamicResource ThemeControlHighlightLowBrush}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding DependentComponents}" Padding="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5" Padding="10" CornerRadius="4"
                                            Background="{Binding BackgroundBrush}"
                                            BorderThickness="1" BorderBrush="{Binding BorderBrush}">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      VerticalAlignment="Center" Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Author}" Opacity="0.7" FontSize="11"/>
                                                <TextBlock Text="{Binding DependencyInfo}"
                                                           Foreground="{Binding DependencyInfoColor}"
                                                           FontSize="11" Margin="0,5,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" Text="{Binding StatusIcon}"
                                                       FontSize="24" VerticalAlignment="Center"
                                                       ToolTip.Tip="{Binding StatusTooltip}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Component to Delete Info -->
            <Border Grid.Column="1" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                    Background="{DynamicResource ThemeBackgroundBrush}">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="ðŸ—‘ï¸ Component to Delete" FontWeight="SemiBold"
                               Padding="15,10" FontSize="14"
                               Background="{DynamicResource ThemeControlHighlightLowBrush}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <StackPanel Spacing="15">
                            <Border Padding="10" CornerRadius="4" Background="{DynamicResource ThemeControlHighlightLowBrush}">
                                <StackPanel>
                                    <TextBlock Text="{Binding ComponentToDelete.Name}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding ComponentToDelete.Author}" Opacity="0.7" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding ComponentToDelete.Description}"
                                               TextWrapping="Wrap" Margin="0,10,0,0" Opacity="0.8"/>
                                </StackPanel>
                            </Border>

                            <Separator/>

                            <TextBlock Text="Quick Actions:" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding QuickActions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Text}"
                                                Command="{Binding $parent[Window].DataContext.ApplyQuickActionCommand}"
                                                CommandParameter="{Binding}"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Left"
                                                Padding="10,8" Margin="0,0,0,5"
                                                Background="{DynamicResource ThemeControlHighlightLowBrush}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Separator/>

                            <TextBlock Text="Dependency Details:" FontWeight="Bold" Margin="0,10,0,0"/>
                            <TextBlock Text="{Binding DetailedDependencyInfo}"
                                       TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"
                                       Opacity="0.8"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource ThemeControlHighlightLowBrush}"
                BorderThickness="0,1,0,1" BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                Padding="20,10">
            <TextBlock Text="{Binding StatusText}" FontStyle="Italic"/>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="3" Padding="20" Background="{DynamicResource ThemeBackgroundBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="ðŸ”— Unlink &amp; Delete" Click="UnlinkAndDelete_Click" Width="150" Height="35"
                        Classes="AccentButton" FontWeight="SemiBold"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="120" Height="35"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

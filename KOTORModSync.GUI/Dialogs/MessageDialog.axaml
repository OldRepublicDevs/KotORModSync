<Window
    x:Class="KOTORModSync.Dialogs.MessageDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Message"
    Width="450"
    Height="200"
    CanResize="False"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="24" RowDefinitions="*,Auto">
        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock
                x:Name="TitleText"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Message" />

            <TextBlock
                x:Name="MessageText"
                Text="Message content"
                TextWrapping="Wrap" />
        </StackPanel>

        <Button
            x:Name="OkButton"
            Grid.Row="1"
            Padding="24,8"
            HorizontalAlignment="Right"
            Click="OkButton_Click"
            Content="OK" />
    </Grid>
</Window>

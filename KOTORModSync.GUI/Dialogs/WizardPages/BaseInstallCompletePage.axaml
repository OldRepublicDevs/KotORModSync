<UserControl
    x:Class="KOTORModSync.Dialogs.WizardPages.BaseInstallCompletePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBlock
            HorizontalAlignment="Center"
            Text="âœ… Base Installation Complete!"
            TextAlignment="Center" />

        <TextBlock
            HorizontalAlignment="Center"
            Text="All selected mods have been installed successfully."
            TextAlignment="Center" />

        <Border Padding="24" CornerRadius="8" MaxWidth="500">
            <StackPanel Spacing="12">
                <TextBlock
                    HorizontalAlignment="Center"
                    Text="ðŸ“Š Installation Summary" />

                <ItemsControl x:Name="SummaryItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock
                                    Text="{Binding Label}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{Binding Value}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <TextBlock
            HorizontalAlignment="Center"
            Opacity="0.7"
            Text="Click 'Next' to continue..."
            TextAlignment="Center" />
    </StackPanel>
</UserControl>



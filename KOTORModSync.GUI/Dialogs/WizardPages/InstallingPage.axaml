<UserControl
    x:Class="KOTORModSync.Dialogs.WizardPages.InstallingPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
        <StackPanel Grid.Row="0" Spacing="8">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock x:Name="PercentText" />
                <TextBlock
                    x:Name="CountText"
                    Grid.Column="1"
                    HorizontalAlignment="Right" />
            </Grid>

            <ProgressBar
                x:Name="MainProgressBar"
                Height="18"
                Maximum="1"
                Minimum="0" />

            <TextBlock x:Name="CurrentModText" />

            <ProgressBar
                x:Name="CurrentModProgress"
                Height="6"
                IsIndeterminate="True" />
        </StackPanel>

        <TextBlock
            x:Name="DirectionsText"
            Grid.Row="1"
            MaxHeight="100"
            Margin="0,16,0,0"
            TextWrapping="Wrap" />

        <Grid
            Grid.Row="2"
            Margin="0,16,0,0"
            ColumnDefinitions="*,*,*,*"
            RowDefinitions="Auto,Auto">
            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Text="â±ï¸ Elapsed" />
                <TextBlock x:Name="ElapsedTimeText" />
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="4">
                <TextBlock Text="â³ Remaining" />
                <TextBlock x:Name="RemainingTimeText" />
            </StackPanel>

            <StackPanel Grid.Column="2" Spacing="4">
                <TextBlock Text="ðŸ“Š Rate" />
                <TextBlock x:Name="RateText" />
            </StackPanel>

            <TextBlock
                x:Name="CurrentOperationText"
                Grid.Column="3"
                VerticalAlignment="Center" />

            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Spacing="4">
                <TextBlock Text="âš ï¸ Warnings" />
                <TextBlock x:Name="WarningsText" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Spacing="4">
                <TextBlock Text="âŒ Errors" />
                <TextBlock x:Name="ErrorsText" />
            </StackPanel>
        </Grid>

        <Border Grid.Row="3" Margin="0,16,0,0">
            <TextBlock
                x:Name="SlideshowPlaceholder"
                HorizontalAlignment="Center"
                Text="ðŸ“¸ Mod showcase slideshow area (coming soon)" />
        </Border>
    </Grid>
</UserControl>

<UserControl
    x:Class="KOTORModSync.Dialogs.WizardPages.WelcomePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="WelcomePageRoot"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid
        Margin="16,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Row - Align headers horizontally  -->
        <Grid
            Grid.Row="0"
            Margin="0,0,0,6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            ColumnDefinitions="*,12,*">
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="19"
                FontWeight="Bold"
                Text="ðŸš€ What This Wizard Will Do" />
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Welcome to KOTORModSync"
                TextAlignment="Center" />
        </Grid>

        <!--  Content Grid  -->
        <Grid
            x:Name="ContentGrid"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ColumnDefinitions="*,12,*,12,Auto">
            <!--  Left: Installation Overview  -->
            <Border
                x:Name="OverviewCard"
                Grid.Column="0"
                Padding="10,8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                CornerRadius="12">
                <StackPanel x:Name="OverviewContent" Spacing="4">
                    <StackPanel x:Name="StepsPanel" Spacing="1">
                        <!--  Step 1  -->
                        <Border Padding="8,4" CornerRadius="8">
                            <Grid Margin="0,1" ColumnDefinitions="Auto,Auto,*">
                                <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    CornerRadius="16">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="1"
                                        TextAlignment="Center" />
                                </Border>
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="ðŸ“" />
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Spacing="2">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Configure Directories" />
                                    <TextBlock
                                        FontSize="13"
                                        Opacity="0.7"
                                        Text="Set up your game and mod workspace folders"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!--  Step 2  -->
                        <Border Padding="8,4" CornerRadius="8">
                            <Grid Margin="0,1" ColumnDefinitions="Auto,Auto,*">
                                <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    CornerRadius="16">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="2"
                                        TextAlignment="Center" />
                                </Border>
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="ðŸ“„" />
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Spacing="2">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Load Instruction File" />
                                    <TextBlock
                                        FontSize="13"
                                        Opacity="0.7"
                                        Text="Choose your mod build configuration"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!--  Step 3  -->
                        <Border Padding="8,4" CornerRadius="8">
                            <Grid Margin="0,1" ColumnDefinitions="Auto,Auto,*">
                                <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    CornerRadius="16">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="3"
                                        TextAlignment="Center" />
                                </Border>
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="ðŸŽ¯" />
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Spacing="2">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Select Mods" />
                                    <TextBlock
                                        FontSize="13"
                                        Opacity="0.7"
                                        Text="Pick which mods you want to install"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!--  Step 4  -->
                        <Border Padding="8,4" CornerRadius="8">
                            <Grid Margin="0,1" ColumnDefinitions="Auto,Auto,*">
                                <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    CornerRadius="16">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="4"
                                        TextAlignment="Center" />
                                </Border>
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="â¬‡ï¸" />
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Spacing="2">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Download Files" />
                                    <TextBlock
                                        FontSize="13"
                                        Opacity="0.7"
                                        Text="Automatically fetch required mod archives"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!--  Step 5  -->
                        <Border Padding="8,4" CornerRadius="8">
                            <Grid Margin="0,1" ColumnDefinitions="Auto,Auto,*">
                                <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    CornerRadius="16">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="5"
                                        TextAlignment="Center" />
                                </Border>
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="âœ…" />
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Spacing="2">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Validate Setup" />
                                    <TextBlock
                                        FontSize="13"
                                        Opacity="0.7"
                                        Text="Ensure everything is ready for installation"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!--  Step 6  -->
                        <Border Padding="8,4" CornerRadius="8">
                            <Grid Margin="0,1" ColumnDefinitions="Auto,Auto,*">
                                <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    CornerRadius="16">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="6"
                                        TextAlignment="Center" />
                                </Border>
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Text="âš¡" />
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Spacing="2">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Install Mods" />
                                    <TextBlock
                                        FontSize="13"
                                        Opacity="0.7"
                                        Text="Sit back while we install everything automatically"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Center: Hero Section + Notice + Features  -->
            <Grid Grid.Column="2" RowDefinitions="Auto,*">
                <StackPanel
                    x:Name="CenterPanel"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Spacing="4">
                    <!--  Hero Section  -->
                    <StackPanel
                        x:Name="HeroPanel"
                        Margin="0,0,0,2"
                        HorizontalAlignment="Center"
                        Spacing="2">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Text="ðŸŽ®"
                            TextAlignment="Center" />
                        <TextBlock
                            MaxWidth="320"
                            HorizontalAlignment="Center"
                            FontSize="13"
                            Opacity="0.8"
                            Text="The Complete Mod Installation Solution for Knights of the Old Republic"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  Notice Card  -->
                    <Border
                        x:Name="NoticeCard"
                        Margin="0,0,0,3"
                        Padding="8,6"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        CornerRadius="8">
                        <Grid ColumnDefinitions="Auto,*">
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,2,8,0"
                                VerticalAlignment="Top"
                                FontSize="22"
                                Text="âš ï¸" />
                            <StackPanel
                                x:Name="NoticeTextPanel"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Spacing="2">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="Important: Fresh Installation Required"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    FontSize="11"
                                    Opacity="0.9"
                                    Text="For best results, start with a clean installation of KOTOR. If you've previously installed mods, uninstall the game completely and reinstall before proceeding."
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!--  Features Panel - Bottom aligned  -->
                <StackPanel
                    x:Name="FeaturesPanel"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Spacing="2">
                    <TextBlock
                        Margin="0,0,0,1"
                        HorizontalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Text="ðŸ”‘ Key Features" />
                    <StackPanel x:Name="FeaturesGrid" Spacing="1">
                        <!--  Feature 1  -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="ðŸ”„" />
                            <StackPanel Spacing="1">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="Automatic Downloads" />
                                <TextBlock
                                    FontSize="12"
                                    Opacity="0.7"
                                    Text="We'll fetch mod files for you" />
                            </StackPanel>
                        </StackPanel>
                        <!--  Feature 2  -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="ðŸ”" />
                            <StackPanel Spacing="1">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="Smart Validation" />
                                <TextBlock
                                    FontSize="12"
                                    Opacity="0.7"
                                    Text="Catch issues before installation" />
                            </StackPanel>
                        </StackPanel>
                        <!--  Feature 3  -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="ðŸ’¾" />
                            <StackPanel Spacing="1">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="Checkpoint System" />
                                <TextBlock
                                    FontSize="12"
                                    Opacity="0.7"
                                    Text="Resume from where you left off" />
                            </StackPanel>
                        </StackPanel>
                        <!--  Feature 4  -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="ðŸŽ¨" />
                            <StackPanel Spacing="1">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="Theme Support" />
                                <TextBlock
                                    FontSize="12"
                                    Opacity="0.7"
                                    Text="Choose your preferred visual style" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!--  CTA Panel - Right aligned, bottom aligned with Features  -->
            <StackPanel
                x:Name="CtaPanel"
                Grid.Column="4"
                Margin="12,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Spacing="1">
                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="Ready to begin your modding adventure?"
                    TextAlignment="Right" />
                <TextBlock
                    FontSize="11"
                    Opacity="0.7"
                    Text="Click 'Next' to get started with the installation wizard"
                    TextAlignment="Right" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
